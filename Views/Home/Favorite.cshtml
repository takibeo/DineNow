@model IEnumerable<DoAnChuyenNganh.Models.Restaurant>

@{
    ViewData["Title"] = "Nhà hàng yêu thích";
}

<div class="container py-5" id="favContainer">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-danger">
            <i class="bi bi-heart-fill me-2"></i> Nhà hàng yêu thích của bạn
        </h2>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-heartbreak text-danger" style="font-size: 60px;"></i>
            <h4 class="mt-3">Bạn chưa yêu thích nhà hàng nào.</h4>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">
                Khám phá nhà hàng
            </a>
        </div>
        return;
    }

    <div class="row" id="favList">
        @foreach (var r in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4 fav-item" data-id="@r.Id">
                <div class="card border-0 shadow-lg rounded-4 h-100 hover-card">

                    <div class="rounded-top-4" style="height:220px; overflow:hidden;">
                        <img src="@((r.ImageUrl ?? "/images/no-image.png").Split(';')[0])"
                             class="w-100 h-100" style="object-fit:cover;" />
                    </div>

                    <div class="card-body">
                        <h5 class="fw-bold text-dark d-flex justify-content-between">
                            @r.Name

                            <button class="btn btn-sm btn-outline-danger btn-fav" data-id="@r.Id">
                                <i class="bi bi-heart-fill"></i>
                            </button>
                        </h5>

                        @{
                            double rating = ViewBag.RestaurantRatings[r.Id];
                        }

                        <div class="mb-2">
                            @for (int i = 1; i <= 5; i++)
                            {
                                if (i <= rating)
                                {
                                    <i class="bi bi-star-fill text-warning"></i>
                                }
                                else if (i - rating < 1)
                                {
                                    <i class="bi bi-star-half text-warning"></i>
                                }
                                else
                                {
                                    <i class="bi bi-star text-warning"></i>
                                }
                            }
                            <span class="text-muted">(@rating.ToString("0.0"))</span>
                        </div>

                        <p class="text-muted mb-1">
                            <i class="bi bi-geo-alt text-danger"></i> @r.City
                        </p>

                        <p class="mb-1">
                            <i class="bi bi-egg-fried text-info"></i> @r.CuisineType
                        </p>

                        <a asp-controller="Home" asp-action="Detail" asp-route-id="@r.Id"
                           class="btn btn-outline-primary w-100 btn-rounded mt-3">
                            <i class="bi bi-eye"></i> Xem chi tiết
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .hover-card {
        transition: 0.3s;
    }

        .hover-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.08);
        }

    .btn-rounded {
        border-radius: 30px;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function () {

            $(".btn-fav").click(function () {
                const btn = $(this);
                const id = btn.data("id");

                $.post("/Home/ToggleFavorite", { restaurantId: id }, function (res) {

                    if (!res.isFavorite) {

                        const card = btn.closest(".fav-item");

                        card.fadeOut(300, function () {
                            card.remove();

                            if ($(".fav-item").length === 0) {
                                $("#favContainer").html(`
                                    <div class="text-center py-5">
                                        <i class="bi bi-heartbreak text-danger" style="font-size: 60px;"></i>
                                        <h4 class="mt-3">Bạn chưa yêu thích nhà hàng nào.</h4>
                                        <a href="/Home" class="btn btn-primary mt-3">
                                            Khám phá nhà hàng
                                        </a>
                                    </div>
                                `);
                            }
                        });
                    }
                });
            });

        });
    </script>
}



