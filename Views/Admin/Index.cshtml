@model IEnumerable<(DoAnChuyenNganh.Models.User user, string role)>

@{
    ViewData["Title"] = "Quản lý tài khoản";
}

<div class="container mt-4">
    <h2 class="mb-3">@ViewData["Title"]</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Email</th>
                <th>Họ tên</th>
                <th>Số điện thoại</th>
                <th>Vai trò</th>
                <th>Trạng thái</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.user.Email</td>
                    <td>@item.user.FullName</td>
                    <td>@item.user.PhoneNumber</td>
                    <td>@item.role</td>
                    <td>
                        @(item.user.LockoutEnd != null && item.user.LockoutEnd > DateTime.Now
                            ? "Bị khóa"
                            : "Hoạt động")
                    </td>
                    <td>
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.user.Id">Sửa</a>
                        <form asp-action="ToggleLock" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@item.user.Id" />
                            <button type="submit" class="btn btn-sm btn-warning">
                                @(item.user.LockoutEnd != null && item.user.LockoutEnd > DateTime.Now ? "Mở khóa" : "Khóa")
                            </button>
                        </form>
                        <form asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('Xóa tài khoản này?');">
                            <input type="hidden" name="id" value="@item.user.Id" />
                            <button type="submit" class="btn btn-sm btn-danger">Xóa</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
