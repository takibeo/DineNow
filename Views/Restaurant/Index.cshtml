@model IEnumerable<DoAnChuyenNganh.Models.Restaurant>

@{
    ViewData["Title"] = "Danh sách nhà hàng của bạn";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2">
        <h2 class="fw-bold text-primary mb-0">
            <i class="bi bi-shop me-2"></i>Danh sách nhà hàng của bạn
        </h2>
        <a asp-action="Create" class="btn btn-success shadow-sm px-4">
            <i class="bi bi-plus-circle me-1"></i>Thêm nhà hàng
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center py-4">
            <i class="bi bi-info-circle me-2"></i>Hiện chưa có nhà hàng nào được quản lý.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var restaurant in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="card border-0 shadow-sm h-100 restaurant-card">

                        <!-- Carousel ảnh nhà hàng -->
                        <div id="carousel-@restaurant.Id" class="carousel slide rounded-top" data-bs-ride="carousel">
                            <div class="carousel-inner">
                                @{
                                    var images = string.IsNullOrEmpty(restaurant.ImageUrl)
                                    ? new string[] { "/images/no-image.png" }
                                    : restaurant.ImageUrl.Split(';', StringSplitOptions.RemoveEmptyEntries);
                                    int idx = 0;
                                }
                                @foreach (var img in images)
                                {
                                    <div class="carousel-item @(idx == 0 ? "active" : "")">
                                        <img src="@img" class="d-block w-100" style="height:200px; object-fit:cover;" alt="@restaurant.Name" />
                                    </div>
                                    idx++;
                                }
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carousel-@restaurant.Id" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carousel-@restaurant.Id" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            </button>
                        </div>

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-semibold text-dark mb-1">@restaurant.Name</h5>
                            <p class="card-text text-muted mb-2">
                                <i class="bi bi-geo-alt text-danger me-1"></i>@restaurant.Address
                            </p>
                            <p class="text-secondary small flex-grow-1">@restaurant.Description</p>

                            <div class="btn-group d-flex flex-wrap gap-2 mt-3">
                                <a asp-controller="Home" asp-action="Detail" asp-route-id="@restaurant.Id"
                                   class="btn btn-outline-info btn-sm flex-fill"><i class="bi bi-eye me-1"></i> Xem</a>

                                <a asp-controller="MenuItem" asp-action="Create" asp-route-restaurantId="@restaurant.Id"
                                   class="btn btn-outline-primary btn-sm flex-fill"><i class="bi bi-journal-plus me-1"></i> Thêm thực đơn</a>

                                <a asp-action="Edit" asp-route-id="@restaurant.Id"
                                   class="btn btn-outline-warning btn-sm flex-fill"><i class="bi bi-pencil-square me-1"></i> Sửa</a>

                                <button type="button" class="btn btn-outline-danger btn-sm flex-fill"
                                        onclick="confirmDelete(@restaurant.Id, '@restaurant.Name')">
                                    <i class="bi bi-trash3 me-1"></i> Xóa
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        function confirmDelete(id, name) {
            Swal.fire({
                title: 'Xác nhận xóa?',
                text: `Bạn có chắc chắn muốn xóa nhà hàng "${name}" không?`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Xóa',
                cancelButtonText: 'Hủy',
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '/Restaurant/Delete/' + id;
                }
            });
        }
    </script>

    <style>
        .restaurant-card {
            transition: all 0.3s ease;
            border-radius: 0.75rem;
        }

            .restaurant-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 6px 16px rgba(0, 0, 0, 0.15);
            }

        .btn-group {
            display: flex;
            flex-wrap: wrap;
            gap: 6px;
        }

            .btn-group .btn {
                flex: 1 1 48%;
                font-size: 0.9rem;
            }
        @@media (max-width: 576px) {
            .btn-group .btn

        {
            flex: 1 1 100%;
        }

        }

        .carousel-control-prev,
        .carousel-control-next {
            width: 30px;
            height: 30px;
            top: 50%;
            transform: translateY(-50%);
        }
    </style>
}
