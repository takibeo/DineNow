@model DoAnChuyenNganh.Models.Restaurant
@{
    ViewData["Title"] = "Chỉnh sửa thông tin nhà hàng";
}

<div class="container py-5">
    <div class="card p-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="fw-bold text-warning"><i class="bi bi-pencil-square me-2"></i>Chỉnh sửa nhà hàng</h3>
            @if (User.IsInRole("Staff"))
            {
                <a asp-controller="MenuItem" asp-action="Edit" asp-route-restaurantId="@Model.Id"
                   class="btn btn-outline-primary btn-rounded">
                    <i class="bi bi-list-ul"></i> Chỉnh sửa thực đơn
                </a>
            }
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-rounded">
                <i class="bi bi-arrow-left-circle"></i> Quay lại
            </a>
        </div>

        <form asp-action="Edit" enctype="multipart/form-data" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="row g-4">
                <div class="col-md-6">
                    <label asp-for="Name" class="form-label fw-semibold">Tên nhà hàng</label>
                    <input asp-for="Name" class="form-control" />
                </div>

                <div class="col-md-6">
                    <label asp-for="City" class="form-label fw-semibold">Thành phố</label>
                    <input asp-for="City" class="form-control" />
                </div>

                <div class="col-md-12">
                    <label asp-for="Address" class="form-label fw-semibold">Địa chỉ</label>
                    <input asp-for="Address" class="form-control" />
                </div>

                <div class="col-md-6">
                    <label asp-for="Phone" class="form-label fw-semibold">Số điện thoại</label>
                    <input asp-for="Phone" class="form-control" />
                </div>

                <div class="col-md-6">
                    <label asp-for="OpenHours" class="form-label fw-semibold">Giờ mở cửa</label>
                    <input asp-for="OpenHours" class="form-control" />
                </div>

                <div class="col-md-6">
                    <label asp-for="CuisineType" class="form-label fw-semibold">Loại món</label>
                    <input asp-for="CuisineType" class="form-control" />
                </div>

                <div class="col-md-6">
                    <label asp-for="AveragePrice" class="form-label fw-semibold">Giá trung bình</label>
                    <input asp-for="AveragePrice" class="form-control" />
                </div>

                <div class="col-md-12">
                    <label asp-for="Description" class="form-label fw-semibold">Mô tả</label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                </div>

                <div class="col-md-12">
                    <label class="form-label fw-semibold">Ảnh hiện tại</label><br />
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" class="img-fluid rounded shadow-sm mb-3" style="max-width:200px;" />
                    }
                    <input type="file" name="ImageFile" class="form-control" accept="image/*" />
                </div>
            </div>

            <div class="text-end mt-4">
                <button type="submit" class="btn btn-warning btn-lg btn-rounded px-4">
                    <i class="bi bi-save"></i> Lưu thay đổi
                </button>
            </div>
        </form>
    </div>
</div>
