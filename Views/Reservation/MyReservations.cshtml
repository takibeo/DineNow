@model IEnumerable<DoAnChuyenNganh.Models.Reservation>

@{
    ViewData["Title"] = "Lịch đặt bàn của tôi";
}

<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">Bạn chưa có đơn đặt bàn nào.</div>
    }
    else
    {
        <table class="table table-bordered table-striped align-middle">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Nhà hàng</th>
                    <th>Thời gian</th>
                    <th>Số khách</th>
                    <th>Trạng thái</th>
                    <th>Ghi chú</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            @{
                int stt = 0;
            }
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@(++stt)</td>   <!-- Số thứ tự 1,2,3,4 -->
                        <td>@item.Restaurant?.Name</td>
                        <td>@item.ReservationDate.ToString("HH:mm dd/MM/yyyy")</td>
                        <td>@item.NumberOfGuests</td>
                        <td>
                            @switch (item.Status)
                            {
                                case "Pending":
                                    <span class="badge bg-warning text-dark">Chờ xác nhận</span>
                                    break;
                                case "Confirmed":
                                    <span class="badge bg-success">Đã xác nhận</span>
                                    break;
                                case "Cancelled":
                                    <span class="badge bg-danger">Đã hủy</span>
                                    break;
                                case "GuestCancelled":
                                    <span class="badge bg-secondary">Bạn đã hủy</span>
                                    break;
                            }
                        </td>
                        <td>
                            @item.Note
                        </td>
                        <td>
                            @if (item.Status == "Pending" || item.Status == "Confirmed")
                            {
                                <button class="btn btn-danger btn-sm btn-cancel" data-id="@item.Id">
                                    Hủy đặt bàn
                                </button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const cancelButtons = document.querySelectorAll(".btn-cancel");

        cancelButtons.forEach(btn => {
            btn.addEventListener("click", function () {
                const id = this.dataset.id;

                Swal.fire({
                    title: "Hủy đặt bàn?",
                    text: "Bạn có chắc muốn hủy đơn đặt bàn này?",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonText: "Hủy đơn",
                    cancelButtonText: "Thoát",
                    confirmButtonColor: "#d33",
                    cancelButtonColor: "#6c757d"
                }).then((result) => {
                    if (result.isConfirmed) {
                        fetch(`/Reservation/GuestCancel`, {
                            method: "POST",
                            headers: {
                                "Content-Type": "application/x-www-form-urlencoded",
                                "RequestVerificationToken": document.querySelector('input[name="__RequestVerificationToken"]')?.value
                            },
                            body: `id=${id}`
                        })
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                Swal.fire({
                                    icon: "success",
                                    title: "Đã hủy!",
                                    text: "Bạn đã hủy đơn đặt bàn.",
                                    timer: 1500,
                                    showConfirmButton: false
                                }).then(() => location.reload());
                            }
                        });
                    }
                });
            });
        });
    });
</script>


