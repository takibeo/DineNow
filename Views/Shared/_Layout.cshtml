                box-shadow: 0 4px 14px rgba(255,107,107,0.18);
            }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.4rem;
            color: var(--coral) !important;
        }

        .nav-link {
            color: #1f2937 !important;
            font-weight: 500;
            transition: color 0.25s ease;
        }

            .nav-link:hover {
