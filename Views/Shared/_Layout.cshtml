                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Report" asp-action="Index">
                                            <i class="bi bi-bar-chart-line me-2 text-success"></i>
                                            Báo cáo & thống kê
                                        </a>
                                    </li>
                                }
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post">
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="bi bi-box-arrow-right me-2"></i>
                                            Đăng xuất
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Login">Đăng nhập</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Register">Đăng ký</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    @if (SignInManager.IsSignedIn(User) && !isAdmin && !isStaff)
    {
        <div id="chatBubble" style="
        position: fixed;
        bottom: 20px;
        right: 20px;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: var(--coral) !important;
        color: white;
        display: flex;
        justify-content: center;
        align-items: center;
        cursor: pointer;
        z-index: 9999;
        box-shadow: 0 4px 10px rgba(0,0,0,0.2);
        font-size: 24px;
    ">
            💬
            <span id="chatBadge" style="
            display:none;
            position:absolute;
            top:-4px;
            right:-4px;
            background:red;
            color:white;
            font-size:0.7rem;
            width:18px;
            height:18px;
            border-radius:50%;
            text-align:center;
            line-height:18px;
            font-weight:bold;
        ">!</span>
        </div>

        <div id="chatBox" style="
        position: fixed;
        bottom: 90px;
        right: 20px;
        width: 320px;
        height: 400px;
        display: flex;
        flex-direction: column;
        background: white;
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
        z-index: 9999;
    ">
            <div id="chatHeader" style="
            background: #0d6efd;
            color: white;
            padding: 10px;
            font-weight: bold;
            cursor: move;
            position: relative;
        ">
                Chat với Admin
                <button id="deleteChat" style="
                position: absolute;
                top: 5px;
                right: 5px;
                background: #dc3545;
                border: none;
                color: white;
                font-weight: bold;
                cursor: pointer;
                padding: 2px 8px;
                border-radius: 5px;
            ">
                    🗑 Xóa
                </button>
            </div>

            <div id="chatMessages" style="
            flex: 1;            /* chiếm hết space còn lại */
            overflow-y: auto;   /* scroll khi quá dài */
            padding: 10px;
            display: flex;
            flex-direction: column;
            gap: 6px;
            background: #f8f9fa;
        "></div>

            <div style="
            display: flex;
            padding: 5px;
            border-top: 1px solid #ddd;
            flex-shrink: 0;     /* không bị co lại */
        ">
                <input id="chatInput" type="text" style="flex:1; padding:5px;" placeholder="Nhập tin nhắn..." />
                <button id="chatSend" style="margin-left:5px; background:#0d6efd; color:white; border:none; padding:5px 10px;">Gửi</button>
            </div>
        </div>
    }
    <main role="main">
        @RenderBody()
    </main>

    @Html.Partial("_Footer")

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @if (SignInManager.IsSignedIn(User) && !isAdmin && !isStaff)
    {
        <script>
            $(document).ready(function() {
                const chatBox = $("#chatBox");
                const chatBubble = $("#chatBubble");
                const chatMessages = $("#chatMessages");
                const chatBadge = $("#chatBadge");
                const chatInput = $("#chatInput");
                const chatSend = $("#chatSend");
                const deleteChatBtn = $("#deleteChat");

                // Lấy roomId từ Razor
                const roomId = @(_context.ChatRooms.FirstOrDefault(r => r.CustomerId == currentUser.Id)?.Id ?? 0);

                // === 1. Lưu trạng thái chatBox trong sessionStorage ===
                if (sessionStorage.getItem("chatBoxOpen") === "true") {
                    chatBox.show();
                } else {
                    chatBox.hide();
                }

                // === 2. Bấm bong bóng chat toggle chatBox ===
                chatBubble.click(function() {
                    chatBox.toggle();
                    sessionStorage.setItem("chatBoxOpen", chatBox.is(":visible"));
                    loadMessages();
                    chatBadge.hide();
                });

                // === 3. Load tin nhắn ===
                function loadMessages() {
                    if (roomId === 0) return;

                    $.get("/Chat/Load", { roomId: roomId }, function(data) {
                        chatMessages.empty();

                        data.forEach(m => {
                            const who = m.userId === "@currentUser.Id" ? "customer" : "admin";
                            const msgDiv = $(`<div class="msg ${who}"></div>`).text(m.content);
                            chatMessages.append(msgDiv);
                        });

                        // Luôn scroll xuống cuối
                        chatMessages.scrollTop(chatMessages[0].scrollHeight);

                        // Hiện badge nếu chatBox đóng và có tin nhắn mới từ Admin
                        if (!chatBox.is(":visible") && data.some(m => m.userId !== "@currentUser.Id")) {
                            chatBadge.show();
                        }
                    });
                }

                // === 4. Gửi tin nhắn ===
                chatSend.click(function() {
                    let text = chatInput.val().trim();
                    if (!text) return;

                    $.post("/Chat/Send", { roomId: roomId, msg: text }, function(res) {
                        if (!res.ok) Swal.fire('Lỗi', res.msg, 'error');
                        chatInput.val("");
                        loadMessages();
                    });
                });

                // Enter gửi tin nhắn
                chatInput.keypress(function(e) {
                    if (e.which === 13) { // Enter
                        chatSend.click();
                        return false;
                    }
                });

                // === 5. Xóa toàn bộ chat ===
                deleteChatBtn.click(function() {
                    if (roomId === 0) return;

                    Swal.fire({
                        title: 'Bạn có chắc?',
                        text: "Bạn sẽ xóa toàn bộ tin nhắn!",
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'Đúng, xóa nó!'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            $.post("/Chat/DeleteChat/" + roomId, function(res) {
                                if (res.ok) {
                                    chatMessages.empty();
                                    Swal.fire('Đã xóa!', res.msg, 'success');
                                } else {
                                    Swal.fire('Lỗi', res.msg, 'error');
                                }
                            });
                        }
                    });
                });

                // === 6. Auto refresh mỗi giây ===
                setInterval(loadMessages, 1000);
            });
        </script>
    }
    <script>
        window.addEventListener("scroll", () => {
            const navbar = document.querySelector(".navbar");
            navbar.classList.toggle("scrolled", window.scrollY > 10);
        });
        window.addEventListener("load", () => {
                const splash = document.getElementById("splashScreen");

                if (sessionStorage.getItem("splashShown")) {
                    if (splash) splash.remove();
                    return;
                }
                sessionStorage.setItem("splashShown", "true");
                splash.style.display = "flex";
                setTimeout(() => {
                    splash.classList.add("hidden");
                }, 1800);
                setTimeout(() => {
                    splash.remove();
                }, 2400);
            });
                    let lastScrollTop = 0;
        const navbar = document.querySelector('.navbar');
        const scrollOffset = 80; 

        window.addEventListener('scroll', () => {
            const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
            if (scrollTop > 20) {
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }
            if (scrollTop > lastScrollTop && scrollTop > scrollOffset) {
                navbar.classList.add('nav-hidden');
            }
            else {
                navbar.classList.remove('nav-hidden');
            }

            lastScrollTop = scrollTop <= 0 ? 0 : scrollTop;
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
