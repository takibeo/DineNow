                                    <li>
                                        <a class="dropdown-item" asp-controller="Reservation" asp-action="Manage">
                                            <i class="bi bi-receipt me-2"></i>
                                            Quản lý đặt bàn
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Order" asp-action="ManageOrders">
                                            <i class="bi bi-basket3 me-2 text-primary"></i>
