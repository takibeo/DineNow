@model DoAnChuyenNganh.Models.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Quên mật khẩu";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh; background-color: var(--bg-main);">
    <div class="card shadow-lg border-0 rounded-4 p-4" style="max-width: 420px; width: 100%; background-color: var(--bg-card);">
        <h3 class="text-center fw-bold mb-4" style="color: var(--coral);">
            <i class="bi bi-envelope-fill me-2"></i>@ViewData["Title"]
        </h3>

        <form asp-action="ForgotPassword" method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <!-- Email -->
            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-semibold" style="color: var(--text-main);"></label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-at"></i></span>
                    <input asp-for="Email" class="form-control" placeholder="Email đăng ký của bạn" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success">@ViewBag.Message</div>
            }

            <button type="submit" class="btn w-100 py-2 fw-semibold rounded-pill" style="background-color: var(--coral); color:#fff;">
                <i class="bi bi-send-fill me-1"></i>Gửi mật khẩu mới
            </button>
        </form>

        <div class="text-center mt-3">
            <a asp-action="Login" class="text-decoration-none" style="color: var(--coral-dark); font-weight: 600;">Quay lại đăng nhập</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
