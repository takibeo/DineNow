@model DoAnChuyenNganh.Models.ViewModels.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Quên mật khẩu";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg border-0 rounded-4 p-4" style="max-width: 420px; width: 100%;">

        <h3 class="text-center fw-bold mb-4">
            <i class="bi bi-envelope-fill me-2"></i>Quên mật khẩu
        </h3>

        <form asp-action="ForgotPassword" method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <!-- Email -->
            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-semibold"></label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-at"></i></span>
                    <input asp-for="Email" class="form-control" placeholder="Email đăng ký của bạn" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success">@ViewBag.Message</div>
            }

            <button type="submit" class="btn btn-primary w-100 py-2 fw-semibold rounded-pill">
                <i class="bi bi-send-fill me-1"></i>Gửi mật khẩu mới
            </button>
        </form>

        <div class="text-center mt-3">
            <a href="/Account/Login" class="text-decoration-none">Quay lại đăng nhập</a>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
