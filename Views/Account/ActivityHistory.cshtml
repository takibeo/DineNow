@model IEnumerable<DoAnChuyenNganh.Models.UserLog>

@{
    ViewData["Title"] = "Lịch sử hoạt động";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>@ViewData["Title"]</h2>

        @if (Model.Any())
        {
            <form id="clearLogsForm" asp-action="ClearAllLogs" method="post">
                <button type="button" id="btnClearLogs" class="btn btn-danger btn-sm">
                    🗑️ Xóa toàn bộ lịch sử
                </button>
            </form>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">Bạn chưa có lịch sử hoạt động nào.</div>
    }
    else
    {
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Hành động</th>
                    <th>Mô tả</th>
                    <th>Thời gian</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var log in Model)
                {
                    <tr>
                        <td>@log.Action</td>
                        <td>@log.Description</td>
                        <td>@log.Timestamp.ToString("dd/MM/yyyy HH:mm:ss")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        document.getElementById("btnClearLogs")?.addEventListener("click", function () {
            Swal.fire({
                title: "Xóa toàn bộ lịch sử?",
                text: "Thao tác này không thể hoàn tác. Bạn có chắc chắn muốn tiếp tục không?",
                icon: "warning",
                showCancelButton: true,
                confirmButtonText: "Có, xóa tất cả",
                cancelButtonText: "Hủy",
                confirmButtonColor: "#d33",
                cancelButtonColor: "#6c757d"
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById("clearLogsForm").submit();
                }
            });
        });
    </script>
}
